        "list_field": true,
        "list_searchable": true,
        "list_sortable": true
      },
      {
        "input_slug": "password",
        "input_placeholder": "Enter password",
        "input_type": "password",
        "input_unique": false,
        "input_confirm": true,
        "list_field": false,
        "list_searchable": false,
        "list_sortable": false
      }
    ]
  },
  "section": {
    "type": "content",
    "slug": "section",
    "name": "section",
