    "searchable_types": ["page"]
  },
  "user": {
    "type": "entity",
    "slug": "user",
    "name": "user",
    "plural": "users",
    "roles": {
      "admin": {"role":"admin","slug":"admin","title":"Admin"},
      "editor": {"role":"crew","slug":"editor","title":"Editor"},
      "guest_writer": {"role":"member","slug":"guest_writer","title":"Guest writer"},
      "subscriber": {"role":"visitor","slug":"subscriber","title":"Newsletter subscriber"}
